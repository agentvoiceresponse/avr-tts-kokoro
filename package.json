    "dc:push": "docker push agentvoiceresponse/avr-tts-kokoro:latest && docker push agentvoiceresponse/avr-tts-kokoro:${npm_package_version}"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agentvoiceresponse/avr-tts-kokoro.git"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.4.5",
