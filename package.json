  "author": "Agent Voice Response <info@agentvoiceresponse.com>",
  "description": "This repository provides a text-to-speech service using Kokoro API integrated with the Agent Voice Response system.",
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "start:dev": "nodemon --inspect ./index.js",
